<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Random User Information</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Random User Information Portal</h1>
      <p>Discover random users from around the world</p>
    </header>

    <div class="control-section">
      <button id="fetchUserBtn" class="btn-primary">Generate Random User</button>
      <div id="loading" class="loading hidden">Loading...</div>
    </div>

    <div id="errorMessage" class="error-message hidden"></div>

    <!-- User Profile Section -->
    <section id="userSection" class="section hidden">
      <h2>User Profile</h2>
      <div class="user-card">
        <div class="user-image">
          <img id="userPicture" src="" alt="User Picture">
        </div>
        <div class="user-details">
          <div class="detail-row">
            <span class="label">Name:</span>
            <span id="userName"></span>
          </div>
          <div class="detail-row">
            <span class="label">Gender:</span>
            <span id="userGender"></span>
          </div>
          <div class="detail-row">
            <span class="label">Age:</span>
            <span id="userAge"></span>
          </div>
          <div class="detail-row">
            <span class="label">Date of Birth:</span>
            <span id="userDob"></span>
          </div>
          <div class="detail-row">
            <span class="label">Address:</span>
            <span id="userAddress"></span>
          </div>
          <div class="detail-row">
            <span class="label">City:</span>
            <span id="userCity"></span>
          </div>
          <div class="detail-row">
            <span class="label">Country:</span>
            <span id="userCountry"></span>
          </div>
        </div>
      </div>
    </section>

    <!-- Country Information Section -->
    <section id="countrySection" class="section hidden">
      <h2>Country Information</h2>
      <div class="country-card">
        <div class="flag-container">
          <img id="countryFlag" src="" alt="Country Flag">
        </div>
        <div class="country-details">
          <div class="detail-row">
            <span class="label">Country:</span>
            <span id="countryName"></span>
          </div>
          <div class="detail-row">
            <span class="label">Capital:</span>
            <span id="countryCapital"></span>
          </div>
          <div class="detail-row">
            <span class="label">Languages:</span>
            <span id="countryLanguages"></span>
          </div>
          <div class="detail-row">
            <span class="label">Currency:</span>
            <span id="countryCurrency"></span>
          </div>
        </div>
      </div>

      <!-- Exchange Rate Section -->
      <div id="exchangeSection" class="exchange-card hidden">
        <h3>Exchange Rates</h3>
        <div class="exchange-details">
          <div class="exchange-item">
            <span class="exchange-label">To USD:</span>
            <span id="exchangeUSD" class="exchange-value"></span>
          </div>
          <div class="exchange-item">
            <span class="exchange-label">To KZT:</span>
            <span id="exchangeKZT" class="exchange-value"></span>
          </div>
        </div>
      </div>
    </section>

    <!-- News Section -->
    <section id="newsSection" class="section hidden">
      <h2>Latest News</h2>
      <div id="newsContainer" class="news-container"></div>
    </section>
  </div>

  <script src="/js/client.js"></script>
</body>
</html>